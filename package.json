{
  "name": "cookies",
  "version": "1.0.0",
  "description": "A bookmarklet that tells you the most efficient purchase in Cookie Clicker by leveraging [Cookie Monster](https://github.com/CookieMonsterTeam/CookieMonster)'s payback period calculations.",
  "main": "build-bookmarklet.js",
  "scripts": {
    "build:ts": "bun build.ts",
    "build": "bun build.ts && bun build-bookmarklet.js",
    "build:site": "bun build-site.js",
    "build:all": "bun run build && bun run build:site",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "bun run tsc --noEmit",
    "lint": "bun run eslint src/",
    "lint:fix": "bun run eslint src/ --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "^20.3.7",
    "@types/bun": "latest",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
